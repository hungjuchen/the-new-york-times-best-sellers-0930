<!DOCTYPE html>
<html lang="en">
  <head>
    <title></title>
    <meta name="description" content="A cool thing made with Glitch">
    <link id="favicon" rel="icon" href="https://glitch.com/edit/favicon-app.ico" type="image/x-icon">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- import the webpage's stylesheet -->
    <link rel="stylesheet" href="/style.css">
    
    <style>
      body{
        font-family: verdana;
        font-style: normal;
        font-size:15px;
        line-height: 28px;
        padding: 0px;
        display:flex;
        margin: 0px;
      }
      
      #search_result_bar{
        background-color: #ffcccc;
        font-family: Georgia, Garamond, serif;
        text-align: center;
        font-size:20px;
        padding: 25px 0px;
      }
      
      #book_page{
        background-color: #1D1A1A;
        color: white;
        text-align: center;
        padding: 50px 10px;
        margin: 0;
        font-family: Georgia, Garamond, serif;
      }
      
      #title{
        color:#1D1A1A ;
        font-size:22px;
        font-style: 600;
        font-family: Georgia, Garamond, bolder;
      }
      
      #content{
        background-color:PeachPuff ;
        text-align: left;
        padding: 50px;
        display:flex;
        margin: 0px;
      }
      
      #footer{
        background-color: #1D1A1A;
        color: white;
        padding: 50px 10px;
        margin: 0;
        display:flex;
      }
      
    </style>
      
    
    
    
    
    
    
    
    
    
    
    
    
    
    <!-- import the webpage's client-side javascript file -->
    <script src="/client.js" defer></script>
  </head>
  <body>
    <header>
      <!--head banner-->
      <div id="NYT_pic"> 
        <img src="https://www.niemanlab.org/images/new-york-times-en-espanol-1.jpeg" alt="logo" >
      </div>
      
      <!--search result bar-->
      <div id="search_result_bar"><a href="<%=referer%>">Back to search results</a></div>
      
      <!--title-->
      <div id="book_page">
        <h1>
          Book Page
        </h1>
      </div>
      
      <!--main content-->
      <div id="content">
        <main>
          <div><image src="<%= cover %>"></div>
          <div id="title"><%= title %></div>
          <div>ISBN: <%= isbn %></div>
          <div>Creator: <%= creator %></div>
          <div>Rank: <%= rank %></div>
          <div>Weeks: <%= weeks %></div>
          <% subject.forEach(function(s) { %>
            <div>subject: <%= s%></div>
          <% }) %>     
          <div>Publisher: <%= publisher %></div>
          <div>Description: <%= description %></div>
        </main>
      </div>
      
    <!--footer-->
      <div id="footer" >
        <div id="logo">
          <img src="https://cdn.freebiesupply.com/images/large/2x/new-york-times-logo-black-and-white.png" alt="logo2" width="300px;">
          <p>
            We believe that great journalism has the power to make each readerâ€™s life richer and more fulfilling,<br/> 
            and all of society stronger and more just.
          </p>
        </div>

        <div id="about">
          <p>
            About
          </p>
          <p>
            The New York Times Company
          </p>
          <p>
            Privacy Policy
          </p>
          <p>
            Terms of Sale  
          </p>
        </div>

        <div id="help"> 
          <p>
            Help
          </p>
          <p>
            Frequently Asked Questions        
          </p>
          <p>
            Contact Us        
          </p>
          <p>
            Feedback        
          </p>
        </div>
      </div>
      
      
    
      
      
      
      
      
      
      
      
      
      
      
    </header>

    
    
    
    
 
   
    

    <!-- include the Glitch button to show what the webpage is about and
          to make it easier for folks to view source and remix -->
    <div class="glitchButton" style="position:fixed;top:20px;right:20px;"></div>
    <script src="https://button.glitch.me/button.js"></script>

  </body>
</html>
